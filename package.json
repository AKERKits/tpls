{
  "name": "aker-mailchimp-templates",
  "version": "1.0.0",
  "config": {
    "dev": 3001
  },
  "scripts": {
    "dev": "yarn dev:server -- -s",
    "dev:server": "tarima -dwp $npm_package_config_dev",
    "dist": "tarima -fq",
    "dist:ci": "tarima -fqe ci",
    "dist:prod": "tarima -fqe prod",
    "dist:stage": "tarima -fqe stage"
  },
  "tarima": {
    "src": "src/**/*",
    "filter": [
      "!_*",
      "!**/_*",
      "!**/_*/**"
    ],
    "bundle": [
      "**/index.js"
    ],
    "rename": [
      "**:{fullpath/1}",
      "**/index.!(html):{basedir}.{ext}"
    ],
    "ignoreFiles": [
      ".gitignore"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "plugins": [
      "talavera"
    ],
    "pluginOptions": {
      "talavera": {
        "dest": "images"
      }
    },
    "bundleOptions": {
      "bundleCache": true,
      "entryCache": true,
      "extensions": {
        "js": "es6",
        "css": "less"
      },
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "buble": "^0.15.2",
    "less": "^2.7.2",
    "less-plugin-autoprefix": "^1.5.1",
    "pug": "^2.0.0-beta11",
    "rollup": "^0.41.6",
    "talavera": "^0.2.0",
    "tarima-cli": "^0.3.10"
  },
  "optionalDependencies": {
    "chokidar": "^1.6.1",
    "tarima-lr": "0.0.11"
  }
}
